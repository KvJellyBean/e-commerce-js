  <div class="carousel-inner">
    <!-- First Slide -->
    <div class="carousel-item active">
      <!-- Slide Content -->
      <div class="slide row align-items-center justify-content-center">
        <!-- Left Column -->
        <div class="col-md-6">
          <!-- Slide Content Wrapper -->
          <div class="content">
            <!-- Slide Title -->
            <span class="text-warning">Nike Lifestyle Shoes</span>
            <h2>Stylish Stride</h2>
            <!-- Slide Description -->
            <p>
              Elevate your every step with our newest arrivals. Experience the
              perfect fusion of fashion-forward design and comfortable
              functionality with our Stylish Stride footwear, crafted to
              complement your unique style effortlessly.
            </p>
