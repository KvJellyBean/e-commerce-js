<dialog id="editProductDialog">
  <form method="post" action="/api/products/:id">
    <legend>Edit Product</legend>
    <div class="form-wrapper">
      <div class="input-group">
        <label for="nameInput">Product Name: </label>
        <input
          name="name"
          type="text"
          id="nameEditInput"
          required
          autocomplete="true"
          placeholder="Enter shoes name..."
        />
      </div>

      <div class="input-group">
        <label for="priceInput">Price: </label>
        <input
          name="price"
          type="number"
          id="priceEditInput"
          min="0"
          step="0.01"
          required
          placeholder="Enter price in dollar (e.g.
                150.50)"
        />
      </div>

      <div class="input-group">
        <label for="descriptionInput">Description: </label>
        <textarea
          name="description"
          id="descriptionEditInput"
          required
          placeholder="Enter the shoes description..."
        ></textarea>
      </div>

      <div class="input-group">
        <label for="imageInput">Enter Shoes' Image Link: </label>
        <input
          name="image"
          type="text"
          id="imageEditInput"
          required
          placeholder="Enter link (e.g. https://nike.com/shoes/nike-white-shoes)"
        />
      </div>

      <div class="input-group">
        <label for="ratingInput">Rating: </label>
        <input
          name="rating"
          type="number"
          id="ratingEditInput"
          min="0"
          max="5"
          step="0.1"
          required
          placeholder="Enter shoes rating..."
        />
      </div>
    </div>

    <div class="button-group">
      <button type="submit" class="btn-success editBtn">Edit</button>
      <button type="button" class="btn-danger cancelEditProduct">Cancel</button>
    </div>
  </form>
</dialog>
